@{
  Layout = "_Layout";
}

@using VendorOrder.Models;

<h3>Here are all the orders for this vendor:</h3>

<ol>
@foreach (Order order in @Model["orders"])
{
  <li><a href='/vendor/@Model["vendor"].Id/order/@order.Id'>@order.Title</a></li>
}
</ol>

<div class="orderButtons">
  <a href='/vendor/@Model["vendor"].Id/order/new'><button class="btn btn-warning">Add new order</button></a>
  <a href='/vendor'><button class="btn btn-warning">Back to vendor list</button></a>
  <a href='/'><button class="btn btn-warning">Back to Main Page</button></a>
</div>
