@{
  Layout = "_Layout";
}

@using VendorOrder.Models;

<h1>vendors</h1>

@if (@Model.Count == 0)
{
  <h3>No vendors have been added yet!</h3>
} 
<ol>
@foreach (Vendor vendor in Model)
{
  <li>
    <h3><a href='/vendor/@vendor.Id'>@vendor.Name</a> - @vendor.Description</h3>
  </li>
}
</ol>

<a href='/vendor/new'><button class="btn btn-warning">Add Vendor</button></a>
<a href='/'><button class="btn btn-warning">Back Home</button></button></a>